<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ext="clr-namespace:AppFramework.Extensions"
    xmlns:sync="http://schemas.syncfusion.com/wpf">
    <Style TargetType="sync:SfDataGrid">
        <Setter Property="HeaderLinesVisibility" Value="Horizontal" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="RowHeight" Value="35" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="NavigationMode" Value="Row" />
        <Setter Property="ColumnSizer" Value="AutoWithLastColumnFill" />
        <Setter Property="AutoGenerateColumns" Value="False" />
        <!--  启用表格列筛选功能  -->
        <Setter Property="AllowFiltering" Value="True" />
        <Setter Property="SelectionMode" Value="Extended" />
        <!--  列允许设置宽度  -->
        <Setter Property="AllowResizingColumns" Value="True" />
        <!--  表格列自适应系统语言  -->
        <Setter Property="ext:DataGridTranslateExtensions.Translate" Value="True" />
    </Style>
</ResourceDictionary>