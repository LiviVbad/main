<UserControl
    x:Class="AppFramework.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:AppFramework.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Color x:Key="SeriesThreeColor">#B146C2</Color>
        <Color x:Key="SeriesOneColor">#0078DE</Color>
        <Color x:Key="SeriesSevenColor">#7200E6</Color>
        <Color x:Key="SeriesTwoColor">#00CC6A</Color>
        <Color x:Key="SeriesFourColor">#FFB900</Color>
        <Color x:Key="SeriesFiveColor">#7A7574</Color>
        <Color x:Key="SeriesSixColor">#E2182F</Color>
        <Color x:Key="SeriesEightColor">#007F00</Color>
        <Color x:Key="SeriesNineColor">#E3236F</Color>
        <Color x:Key="SeriesTenColor">#FA9901</Color>

        <sync:ChartColorModel x:Key="CustomColor">
            <sync:ChartColorModel.CustomBrushes>
                <SolidColorBrush Color="{StaticResource SeriesOneColor}" />
                <SolidColorBrush Color="{StaticResource SeriesTwoColor}" />
                <SolidColorBrush Color="{StaticResource SeriesThreeColor}" />
                <SolidColorBrush Color="{StaticResource SeriesNineColor}" />
                <SolidColorBrush Color="{StaticResource SeriesFourColor}" />
                <SolidColorBrush Color="{StaticResource SeriesSevenColor}" />
                <SolidColorBrush Color="{StaticResource SeriesEightColor}" />
                <SolidColorBrush Color="{StaticResource SeriesFiveColor}" />
                <SolidColorBrush Color="{StaticResource SeriesSixColor}" />
                <SolidColorBrush Color="{StaticResource SeriesTenColor}" />
            </sync:ChartColorModel.CustomBrushes>
        </sync:ChartColorModel>

        <Style x:Key="iconTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="/Assets/Fonts/#iconfont" />
        </Style>

        <Style x:Key="headerTextBlockStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ItemsControl ItemsSource="{Binding TopDashBoards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5,0">
                        <Border Style="{StaticResource BorderStyle}" />

                        <StackPanel Margin="15" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding Title}"
                                TextWrapping="NoWrap"
                                ToolTip="{Binding Title}" />
                            <TextBlock
                                Margin="0,10"
                                FontSize="22"
                                FontWeight="Bold"
                                Foreground="{Binding Foreground}"
                                Text="{Binding Amount}" />
                            <sync:SfLinearProgressBar
                                Height="6"
                                IndicatorCornerRadius="3"
                                Progress="60"
                                ProgressColor="{Binding Foreground}"
                                TrackColor="#DDDDDD" />
                        </StackPanel>

                        <Image
                            Width="60"
                            Height="60"
                            Margin="0,0,10,10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Source="{Binding Logo}" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Margin="5,10,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.RowSpan="2" Style="{StaticResource BorderStyle}" />
                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource iconTextBlockStyle}" Text="&#xe656;" />
                    <TextBlock Style="{StaticResource headerTextBlockStyle}" Text="{extensions:Translate IncomeStatistics}" />
                </StackPanel>

                <StackPanel
                    Margin="0,10,10,10"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <RadioButton Content="{extensions:Translate Daily}" IsChecked="True" />
                    <RadioButton Margin="5,0" Content="{extensions:Translate Weekly}" />
                    <RadioButton Content="{extensions:Translate Monthly}" />
                </StackPanel>

                <sync:SfChart
                    x:Name="columnChart"
                    Grid.Row="1"
                    Margin="5"
                    ColorModel="{StaticResource CustomColor}"
                    Palette="Custom"
                    SideBySideSeriesPlacement="False">

                    <sync:SfChart.PrimaryAxis>
                        <sync:CategoryAxis />
                    </sync:SfChart.PrimaryAxis>

                    <sync:SfChart.SecondaryAxis>
                        <sync:NumericalAxis />
                    </sync:SfChart.SecondaryAxis>

                    <sync:SfChart.Legend>
                        <sync:ChartLegend DockPosition="Bottom" />
                    </sync:SfChart.Legend>

                    <sync:SplineSeries
                        EnableAnimation="True"
                        ItemsSource="{Binding Performance}"
                        Label="Free"
                        ShowTooltip="True"
                        XBindingPath="Server_Load"
                        YBindingPath="Server1">
                        <sync:SplineSeries.AdornmentsInfo>
                            <sync:ChartAdornmentInfo Symbol="Ellipse" />
                        </sync:SplineSeries.AdornmentsInfo>
                    </sync:SplineSeries>

                    <sync:SplineSeries
                        EnableAnimation="True"
                        ItemsSource="{Binding Performance}"
                        Label="Standard"
                        ShowTooltip="True"
                        XBindingPath="Server_Load"
                        YBindingPath="Server2">
                        <sync:SplineSeries.AdornmentsInfo>
                            <sync:ChartAdornmentInfo Symbol="Ellipse" />
                        </sync:SplineSeries.AdornmentsInfo>
                    </sync:SplineSeries>

                    <sync:SplineSeries
                        EnableAnimation="True"
                        ItemsSource="{Binding Performance}"
                        Label="Advanced"
                        ShowTooltip="True"
                        XBindingPath="Server_Load"
                        YBindingPath="Server3">
                        <sync:SplineSeries.AdornmentsInfo>
                            <sync:ChartAdornmentInfo Symbol="Ellipse" />
                        </sync:SplineSeries.AdornmentsInfo>
                    </sync:SplineSeries>
                </sync:SfChart>
            </Grid>

            <Grid Grid.Column="1" Margin="5,10,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="2" Style="{StaticResource BorderStyle}" />

                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource iconTextBlockStyle}" Text="&#xe664;" />
                    <TextBlock Style="{StaticResource headerTextBlockStyle}" Text="{extensions:Translate EditionStatistics}" />
                    <TextBlock VerticalAlignment="Bottom" Text="  2021/11/1 ~ 2021/12/15" />
                </StackPanel>

                <sync:SfChart Grid.Row="1">
                    <sync:SfChart.Legend>
                        <sync:ChartLegend DockPosition="Bottom" />
                    </sync:SfChart.Legend>
                    <sync:DoughnutSeries
                        x:Name="doughnutSeries1"
                        CapStyle="BothCurve"
                        DoughnutCoefficient="10"
                        EnableAnimation="True"
                        EndAngle="270"
                        IsStackedDoughnut="True"
                        ItemsSource="{Binding ExpenditureData}"
                        MaximumValue="100"
                        Palette="Custom"
                        SegmentSpacing="0.2"
                        StartAngle="-90"
                        XBindingPath="Category"
                        YBindingPath="Expenditure" />
                </sync:SfChart>
            </Grid>

            <Grid Grid.Row="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border
                    Grid.RowSpan="2"
                    Padding="10"
                    Style="{StaticResource BorderStyle}" />

                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource iconTextBlockStyle}" Text="&#xe602;" />
                    <TextBlock Style="{StaticResource headerTextBlockStyle}" Text="{extensions:Translate SubscriptionExpiringTenants}" />
                </StackPanel>

                <TextBlock
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#1E90FF"
                    Text="{extensions:Translate SeeAllRecords}" />

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ExpiringTenant.ExpiringTenants}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Border
                                        Margin="10,2"
                                        CornerRadius="10"
                                        Opacity="0.1"
                                        Style="{StaticResource BorderStyle}" />
                                    <Border Margin="10,3" Padding="10">
                                        <DockPanel LastChildFill="False">
                                            <TextBlock Text="{Binding TenantName}" />
                                            <TextBlock DockPanel.Dock="Right" Text="{Binding RemainingDayCount}" />
                                        </DockPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border
                    Grid.RowSpan="2"
                    Margin="0,2"
                    Padding="10"
                    Style="{StaticResource BorderStyle}" />

                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource iconTextBlockStyle}" Text="&#xe69b;" />
                    <TextBlock Style="{StaticResource headerTextBlockStyle}" Text="{extensions:Translate RecentTenants}" />
                </StackPanel>

                <TextBlock
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#1E90FF"
                    Text="{extensions:Translate SeeAllRecords}" />

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding RecentTenant.RecentTenants}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Border
                                        Margin="10,2"
                                        CornerRadius="10"
                                        Opacity="0.1"
                                        Style="{StaticResource BorderStyle}" />
                                    <Border Margin="10,3" Padding="10">
                                        <DockPanel LastChildFill="False">
                                            <TextBlock Text="{Binding Name}" />
                                            <TextBlock DockPanel.Dock="Right" Text="{Binding CreationTime, StringFormat='yyyy-MM-dd hh:mm'}" />
                                        </DockPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>